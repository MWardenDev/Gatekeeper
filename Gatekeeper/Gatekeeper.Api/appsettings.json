{
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File",
            "Serilog.Sinks.ApplicationInsights",
            "Serilog.Enrichers.Thread",
            "Serilog.Enrichers.Environment",
            "Serilog.Enrichers.Process"
        ],
        "MinimumLevel": "Information",
        "Enrich": [
            "FromLogContext",
            "WithThreadId",
            "WithMachineName",
            "WithProcessId",
            "WithProcessName"
        ],
        "Properties": {
            "service.name": "Gatekeeper",
            "service.version": "1.0.0",
            "service.instance.id": "%COMPUTERNAME%",
            "AspNetCoreEnvironment": "Development",
            "trace_id": "00000000000000000000000000000000",
            "span_id": "0000000000000000"
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties}{NewLine}",
                    "restrictedToMinimumLevel": "Information"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/gatekeeper-log.txt",
                    "rollingInterval": "Day",
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties}{NewLine}",
                    "restrictedToMinimumLevel": "Information"
                }
            }
        ]
    },

    "LoggingOptions": {
        "UseAppInsights": true,
        "AppInsightsConnectionString": "InstrumentationKey=YOUR-INSTRUMENTATION-KEY-HERE",
        "UseBlobStorage": false,
        "BlobStorageConnectionString": "DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net",
        "UseDatabase": false,
        "DbConnectionString": "Server=localhost;Database=GatekeeperLogs;Trusted_Connection=True;"
    },

    "AllowedHosts": "*",
    "RecoveryStoragePath": "Recovery",
    "Routes": {
        "GetCaseDetails": {
            "TargetType": "Http",
            "TargetAddress": "https://internal-api.local/cases/details"
        },
        "UploadDocument": {
            "TargetType": "Ftp",
            "TargetAddress": "ftp://internal.ftp.server/uploads"
        },
        "test": {
            "TargetType": "Http",
            "TargetAddress": "https://example.com/api/test"
        }
    }
}
